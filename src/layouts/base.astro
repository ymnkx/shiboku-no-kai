---
import '@/styles/base.scss';
import Head from '@/components/head.astro';
import CommonLayout from '@/components/project/CommonLayout.astro';
type Props = {
  title: string;
  description: string;
};
const { title, description } = Astro.props;
---

<html lang="ja">
  <Head title={title} description={description} />
  <body>
    <CommonLayout>
      <slot />
    </CommonLayout>
  </body>
</html>
